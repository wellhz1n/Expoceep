
@{
    ViewData["Title"] = "NovaVenda";
}

<style>
    .header-table {
        color: #ffffffff;
        margin: 0 !important;
        padding: 0 !important;
        width: 100%;
        height: 10%;
        background: #3b96b9;
    }

    .selected {
        background: #b6b6b6 !important;
    }
</style>
<div class="col-12 p-0 m-0">
    <div class="header-table">
        <h5 class="p-2" id="title"></h5>
    </div>
    <div class=" float-right mt-1 ml-3 p-1 ">
        <button class="btn btn-danger" id="btnCancelar">Cancelar</button>
        <button class="btn btn-primary" id="btnSalvar">Salvar</button>
    </div>
    <div id="Adicionar" class="ml-4">




        <div class="row">
            <div class="container1 alert-dark col-10 p-5 h-50" style="left:3%;margin-top:10%; top:0%;">
                <form id="Produtoform">
                    <select id="Produtoselect" name="ProdutoId"></select>
                    <select id="Produtoselecttamanho" name="TamnhoId"></select>
                    <input class="col-2" type="number" min="1" name="Unidades" placeholder="Unidades" />
                    <button class="add_form_field btn btn-primary text-center my-2">
                        <i style="font-size:16px; font-weight:bold;" class="fas fa-plus"></i>
                    </button>
                </form>
                <div class="col-4 alert-dark p-5" style="top:0%; margin-right:0%; right:0%; left:100%; height:100%; position:absolute;">
                    <div class="row text-center">

                        <div class="text-danger row mx-3 font-weight-bolder"> <p>Total: R$:<p id="total"></p></p></div>
                        <div class="text-black-50 row mx-3"> <p>Itens:<p id="itens"></p></p></div>

                    </div>

                </div>
            </div>

        </div>
        <div><h1>Teste</h1></div>

    </div>
  
</div>
@section scripts{
    <script src="~/js/Vendas/Venda/VendaPage.js" type="text/javascript"></script>
}
