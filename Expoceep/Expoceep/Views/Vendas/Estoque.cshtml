
@{
    ViewData["Title"] = "Venda";
}

<style>
    .header-table {
        color: #ffffffff;
        margin: 0 !important;
        padding: 0 !important;
        width: 100%;
        height: 10%;
        background: #3b96b9;
    }

    .selected {
        background: #b6b6b6 !important;
    }
</style>
<div class="col-12 p-0 m-0">
    <div class="header-table">
        <h5 class="p-2" id="title"></h5>
    </div>
    <div class=" float-right mt-1 ml-2 mr-2 p-1 ">
        <button class="btn btn-danger" id="btnCancelar" onclick="window.history.go(-1)">Cancelar</button>
        <button class="btn btn-primary" id="btnGerar">Gerar Grafico</button>
        <button class="btn btn-primary" id="btnSalvar">Salvar Grafico</button>
    </div>
    <div id="Adicionar" class="ml-4 p-4 mt-4 ">


        <div class="form-group col-8 row">
            <div class="col-4">
                <label>Produtos</label>
                <select class="campoform " id="Produtoselect" name="ProdutoId"></select>
            </div>
            <div class="col-4">
                <label>Tamanhos</label>
                <select class="campoform " id="Tamanhoselect" name="Tamanho">
                    <option value="0">P</option>
                    <option value="1">M</option>
                    <option value="2">G</option>
                </select>
            </div>
            <div class="col-4">
                <label>Tipo de Grafico</label>
                <select class="campoform " id="TipoGraficoselect" name="Tipo">
                    <option value="0">Barra</option>
                    <option value="1">Torta</option>
                </select>
            </div>

        </div>

        <div id="chartCont" class="col-10 p-4  my-4 alert-secondary" style="margin-left:10%; display:none;">
            <canvas id="myChart" style="height:10%; width:40%;"></canvas>
        </div>

    </div>
</div>
@section scripts{
    <script src="~/js/Vendas/Estoque/Estoque.js" type="text/javascript"></script>
}
