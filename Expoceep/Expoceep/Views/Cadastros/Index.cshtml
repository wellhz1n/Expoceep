
@{
    ViewData["Title"] = "Menu Cadastros";
    var usr = new ConversorDeObjetos().ConverterParaObject<Usuario>(Context.Session.GetString("UsuarioSession"));


}
<style>

    .prod-box {
        height: 50%;
        width: 45%;
        margin-top: 5%;
    }

    .box-prod-menu {
        padding: 2px;
        transition: all .2s ease-in-out;
        padding: 10px;
        margin: 10px;
        font-weight: bolder;
    }

        .box-prod-menu:hover {
            background: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1));
            cursor: pointer;
        }



    .emconstrucao {
        pointer-events: none;
        opacity: 0.5;
    }

    #construcao {
        position: relative;
        font-family: Comfortaa;
        font-size: 14px;
        width: 60%;
        height: 10%;
        color: white;
        background: red;
        left: 45px;
        top: -90px;
    }
</style>
<div class="col-12 p-0 m-0">
    <div id="menucont" class="row alinharCentroPai p-0 m-0 ">

        <div class="col-2 text-center box-prod-menu " id="menu-produto">
            <img src="~/img/icons/cadastro/produtos.png" class=" prod-box" alt="Alternate Text" />
            <p class="text-center">Produtos</p>
        </div>
        @{ if (usr.NivelUsuario == NivelUsuario.ADM)
            {
                <div class="col-2 text-center box-prod-menu  " id="menu-usuario">
                    <img src="~/img/icons/cadastro/usuarios.png" class=" prod-box" alt="Alternate Text" />
                    <p class="text-center">Usuarios</p>
                </div>
            }
            else { }
        }
        
        <div class="col-2 text-center box-prod-menu" id="menu-clientes">
            <img src="~/img/icons/cadastro/cliente.png" class=" prod-box" alt="Alternate Text" />
            <p class="text-center">Clientes</p>
        </div>
        <div class="col-2 text-center box-prod-menu " id="menu-categoriaproduto">
            <img src="~/img/icons/cadastro/categoria_produto.png" class=" prod-box" alt="Alternate Text" />
            <p class="text-center">Categoria De Produto</p>
            <p id="construcao">Em Construção</p>
        </div>
        <div class="col-2 text-center box-prod-menu " id="menu-materiais">
            <img src="~/img/icons/cadastro/materiais.png" class=" prod-box" alt="Alternate Text" />
            <p class="text-center">Materiais</p>
            <p id="construcao">Em Construção</p>

        </div>
    </div>
</div>

