
@{
    ViewData["Title"] = "Usuarios";
}

<style>
    .header-table {
        color: #ffffffff;
        margin: 0 !important;
        padding: 0 !important;
        width: 100%;
        height: 10%;
        background: #3b96b9;
    }

    .selected {
        background: #b6b6b6 !important;
    }
</style>
<div class="col-12 p-0 m-0">
    <div class="header-table">
        <h5 class="p-2" id="title">Usuarios</h5>
    </div>
    <div class=" float-right mt-1 ml-3 p-1 ">
        <button class="btn btn-danger" id="btnCancelar" hidden>Cancelar</button>
        <button class="btn btn-primary" id="btnSalvar" hidden>Cadastrar</button>
        <button class="btn btn-primary" id="btnNovo">Novo</button>
        <button class="btn btn-primary" id="btnEditar">Editar</button>
        <button class="btn btn-danger" id="btnDeletar">Deletar</button>
    </div>

    <div id="Listagem" class="my-5 py-3">
        <table id="dtUsuario" class="table table-striped  table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>

                    <th class="th-sm" name="Nome">
                    </th>
                    <th class="th-sm" name="Login">
                    </th>
                    <th class="th-sm" name="Email">
                    </th>
                    <th class="th-sm" name="Cpf">
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
    <div id="Adicionar" class="ml-4" hidden>

        <form method="post" id="Usuario" class="col-6 atualizaForm">
            <div class="row mt-5">
                <div class="col-12">
                    <input type="hidden" name="id" class="form-control" />
                    <label for="nome">Nome</label>
                    <input type="text" name="nome" class="form-control" />
                    <label for="login">Login</label>
                    <input type="text" name="login" class="form-control" />
                    <div id="camposenha">
                        <label for="nome">Senha</label>
                        <input type="password" name="senha" class="form-control" />
                    </div>
                    <label for="nome">Email</label>
                    <input type="email" id="email" name="email" class="form-control" data-parsley-type="email" />
                    <label for="#cpf">Cpf</label>
                    <input type="text" id="cpf" name="cpf" class="form-control cpf" minlength="14" />
                     <h4 class="" style="margin-top:4%; background-image:linear-gradient(rgba(59,150,185,0.5),rgba(59,150,185,0.4)); border:solid 2px rgb(59,150,185); border-bottom:0px; width:32%; padding-top:2%;margin-bottom:0%; padding-bottom:2%;">Tipo De Usuario</h4>
                    <div class="form-group  py-4" style="border:solid 2px rgb(59,150,185); background-image:linear-gradient(rgba(59,150,185,0.2),rgba(59,150,185,0.1)); font-weight:bold;">
                        <div class="row">
                            <div class="col-sm-3">
                                <label for="nivel0" class="px-2 ">Comum</label>
                                <input type="radio" id="nivel0" checked="checked" name="Nivel" value="0" />
                            </div>
                            <div class="col-sm-4">
                                <label for="nivel1" class="px-2 ">Adiministrador</label>
                                <input type="radio" id="nivel1" name="Nivel" value="1" />
                            </div>
                            <div class="col-sm-3">
                                <label for="nivel2" class="px-2 ">Contador</label>
                                <input type="radio" id="nivel2" name="Nivel" value="2" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </div>





</div>
@section scripts{

    <script src="~/js/Cadastrar/Usuario/UsuarioPage.js"></script>
}