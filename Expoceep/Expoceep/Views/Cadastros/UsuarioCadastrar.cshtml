
@{
    ViewData["Title"] = "UsuarioCadastrar";
}

<style>
    .header-table {
        color: #ffffffff;
        margin: 0 !important;
        padding: 0 !important;
        width: 100%;
        height: 10%;
        background: #3b96b9;
    }
    .selected{
        background:#b6b6b6 !important;
    }
    table > tr>td{
        cursor:pointer !important;
    }
</style>
<div class="col-12 p-0 m-0">
    <div class="header-table">
        <h5 class="p-2" id="title">Usuarios</h5>
    </div>
    <div class=" float-right mt-1 ml-3 p-1 ">
        <button class="btn btn-danger" id="btnCancelar" hidden>Cancelar</button>
        <button class="btn btn-success" id="btnSalvar" hidden>Cadastrar</button>
        <button class="btn btn-success" id="btnNovo">Novo</button>
        <button class="btn btn-success" id="btnEditar">Editar</button>
        <button class="btn btn-danger" id="btnDeletar">Deletar</button>
    </div>
    
    <div id="Listagem" class="" >
        <table id="dtUsuario" class="table table-striped  table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>

                    <th class="th-sm" name="Nome">
                    </th>
                    <th class="th-sm" name="Login">
                    </th>
                    <th class="th-sm" name="Email">
                    </th>
                    <th class="th-sm" name="Cpf">
                    </th>

                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>

    </div>
    <div id="Adicionar" class="ml-4" hidden>

        <form method="post" id="Usuario" class="col-6">
            <div class="row mt-5">
                <label for="nome">Nome</label>
                <input type="text" name="nome" class="form-control" />
                <label for="login">Login</label>
                <input type="text" name="login" class="form-control" />
                <label for="nome">Senha</label>
                <input type="password" name="senha" class="form-control" />
                <label for="nome">Email</label>
                <input type="email" name="email" class="form-control " />
                <label for="#cpf" >Cpf</label>
                <input type="text"  id="cpf" name="cpf" class="form-control cpf" />
            </div>
        </form>

    </div>





</div>
@section scripts{

    <script src="~/js/Cadastrar/Usuario/UsuarioPage.js"></script>
}