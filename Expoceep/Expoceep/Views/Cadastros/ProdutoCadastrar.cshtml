
@{
    ViewData["Title"] = "Produto";
}

<style>
    .header-table {
        color: #ffffffff;
        margin: 0 !important;
        padding: 0 !important;
        width: 100%;
        height: 10%;
        background: #3b96b9;
    }

    .selected {
        background: #b6b6b6 !important;
    }
</style>
<div class="col-12 p-0 m-0">
    <div class="header-table">
        <h5 class="p-2" id="title">Produtos</h5>
    </div>
    <div class=" float-right mt-1 ml-3 p-1 ">
        <button class="btn btn-danger" id="btnCancelar" hidden>Cancelar</button>
        <button class="btn btn-success" id="btnSalvar" hidden>Cadastrar</button>
        <button class="btn btn-success" id="btnNovo">Novo</button>
        <button class="btn btn-success" id="btnEditar">Editar</button>
        <button class="btn btn-danger" id="btnDeletar">Deletar</button>
    </div>

    <div id="Listagem" class="">
        <table id="dtProduto" class="table table-striped  table-bordered table-sm" cellspacing="0" width="100%">
            <thead>
                <tr>

                    <th class="th-sm" name="Codigo">
                    </th>
                    <th class="th-sm" name="Nome">
                    </th>
                    <th class="th-sm" name="Preco">
                    </th>
                    <th class="th-sm" name="Unidades">
                    </th>
                    <th class="th-sm" name="TamanhoString">
                        Tamanho
                    </th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
    <div id="Adicionar" class="ml-4" hidden>

        <form method="post" id="Produto" class="col-6">
            <div class="row mt-5">
                <div class="col-12" id="tiraErro">
                    <input type="hidden" name="id" value="0" class="form-control" />
                    <div id="CampoUsuarioCodigo" hidden>
                        <label for="codigo">Codigo</label>
                        <input type="text" value="0" name="codigo" class="form-control bloqueado" />
                    </div>
                    <label for="nome">Nome</label>
                    <input type="text" name="nome" class="form-control" />
                    <label for="login">Preço</label>
                    <input type="text" name="Preco" class="form-control" />
                    <label for="nome">Unidades</label>
                    <input type="number" name="Unidades" class="form-control" />
                    <label for="nome">Tamanho</label>
                    <select name="Tamanho" class="form-control " id="Tamanhoselect">
                        <option value="0" selected>P</option>
                        <option value="1">M</option>
                        <option value="2">G</option>
                    </select>
                </div>
            </div>
        </form>

    </div>





</div>
@section scripts{

    <script src="~/js/Cadastrar/Produto/ProdutoPage.js"></script>
}